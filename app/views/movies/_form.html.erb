<%= form_for(movie) do |f| %>
    <div class="field">
        <%= f.label :name %><br>
        <%= f.text_field :name %><br>
        <%= f.label :description %><br>
        <%= f.text_area :description %><br>
    </div>
    
    Location:

    <div class = "field">
     <%= f.fields_for :locations, movie.locations.build do |location_fields| %>
                <%= location_fields.label :zip_code %>
                <%= location_fields.number_field :zip_code %>
                <%= location_fields.label :city %>
                <%= location_fields.text_field :city %>
                <%= location_fields.hidden_field :user_id, :value => current_user.id %>
        <% end %>
    </div>
    <%= f.submit %>
<% end %>